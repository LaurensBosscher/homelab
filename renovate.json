{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "argocd",
    "kustomize",
    "kubernetes"
  ],
  "argocd": {
    "managerFilePatterns": [
      "/(^|/)apps/.+\\.ya?ml$/"
    ]
  },
  "kustomize": {
    "managerFilePatterns": [
      "/(^|/)apps/.+\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/(^|/)apps/.+\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "kubernetes",
        "argocd",
        "kustomize"
      ],
      "matchDatasources": [
        "docker"
      ],
      "automerge": false,
      "prCreation": "immediate",
      "groupName": "container image updates"
    },
    {
      "matchPackageNames": [
        "getmeili/meilisearch"
      ],
      "enabled": false,
      "description": "Meilisearch needs to be updated manually"
    }
  ]
}
